<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.order.mapper.OrderMapper">

    <resultMap id="BaseResultMap" type="com.cloud.order.module.entity.Order">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="totalAmount" column="total_amount"/>
        <result property="payAmount" column="pay_amount"/>
        <result property="status" column="status"/>
        <result property="addressId" column="address_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,total_amount,pay_amount,status,address_id,
        created_at,updated_at
    </sql>

    <!-- 分页查询订单 -->
    <select id="pageQuery" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM orders
        <where>
            deleted = 0
            <if test="query.userId != null">
                AND user_id = #{query.userId}
            </if>
            <if test="query.status != null">
                AND status = #{query.status}
            </if>
            <if test="query.minAmount != null">
                AND total_amount >= #{query.minAmount}
            </if>
            <if test="query.maxAmount != null">
                AND total_amount &lt;= #{query.maxAmount}
            </if>
        </where>
        ORDER BY created_at DESC
    </select>
</mapper>