<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.order.mapper.OrderMapper">

    <resultMap id="BaseResultMap" type="com.cloud.order.module.entity.Order">
        <id property="id" column="id"/>
        <result property="orderNo" column="order_no"/>
        <result property="userId" column="user_id"/>
        <result property="totalAmount" column="total_amount"/>
        <result property="payAmount" column="pay_amount"/>
        <result property="status" column="status"/>
        <result property="refundStatus" column="refund_status"/>
        <result property="addressId" column="address_id"/>
        <result property="payTime" column="pay_time"/>
        <result property="shipTime" column="ship_time"/>
        <result property="completeTime" column="complete_time"/>
        <result property="cancelTime" column="cancel_time"/>
        <result property="cancelReason" column="cancel_reason"/>
        <result property="remark" column="remark"/>
        <result property="shopId" column="shop_id"/>
        <result property="deleted" column="deleted"/>
        <result property="version" column="version"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,order_no,user_id,total_amount,pay_amount,status,refund_status,address_id,
        pay_time,ship_time,complete_time,cancel_time,cancel_reason,remark,shop_id,
        created_at,updated_at,deleted,version
    </sql>

    <!-- 分页查询订单 -->
    <select id="pageQuery" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM orders
        <where>
            deleted = 0
            <if test="query.userId != null">
                AND user_id = #{query.userId}
            </if>
            <if test="query.status != null">
                AND status = #{query.status}
            </if>
            <if test="query.minAmount != null">
                AND total_amount >= #{query.minAmount}
            </if>
            <if test="query.maxAmount != null">
                AND total_amount &lt;= #{query.maxAmount}
            </if>
        </where>
        ORDER BY created_at DESC
    </select>

    <!-- ==================== 订单状态机条件更新SQL（并发安全） ==================== -->

    <!-- 条件更新订单状态 - 从待支付到已支付 -->
    <update id="updateStatusToPaid">
        UPDATE orders
        SET status     = 1,
            updated_at = NOW()
        WHERE id = #{orderId}
          AND status = 0
          AND deleted = 0
    </update>

    <!-- 条件更新订单状态 - 从已支付到已发货 -->
    <update id="updateStatusToShipped">
        UPDATE orders
        SET status     = 2,
            updated_at = NOW()
        WHERE id = #{orderId}
          AND status = 1
          AND deleted = 0
    </update>

    <!-- 条件更新订单状态 - 从已发货到已完成 -->
    <update id="updateStatusToCompleted">
        UPDATE orders
        SET status     = 3,
            updated_at = NOW()
        WHERE id = #{orderId}
          AND status = 2
          AND deleted = 0
    </update>

    <!-- 条件取消订单 - 从待支付到已取消 -->
    <update id="cancelOrderFromPending">
        UPDATE orders
        SET status     = 4,
            updated_at = NOW()
        WHERE id = #{orderId}
          AND status = 0
          AND deleted = 0
    </update>

    <!-- 条件取消订单 - 从已支付到已取消（退款场景） -->
    <update id="cancelOrderFromPaid">
        UPDATE orders
        SET status     = 4,
            updated_at = NOW()
        WHERE id = #{orderId}
          AND status = 1
          AND deleted = 0
    </update>

    <!-- 根据订单ID查询订单（加行锁） -->
    <select id="selectByIdForUpdate" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM orders
        WHERE id = #{orderId}
        AND deleted = 0
        FOR UPDATE
    </select>

    <!-- 批量条件更新订单状态 -->
    <update id="batchUpdateStatus">
        UPDATE orders
        SET status = #{toStatus},
        updated_at = NOW()
        WHERE id IN
        <foreach collection="orderIds" item="orderId" open="(" separator="," close=")">
            #{orderId}
        </foreach>
        AND status = #{fromStatus}
        AND deleted = 0
    </update>

</mapper>
